<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FAFAFA"
        tools:context=".ui.profile.ProfileFragment2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16sp">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="128sp"
                        android:layout_height="128sp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="10sp">

                        <ImageView
                            android:id="@+id/profile_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="#FFFFFF"
                            android:contentDescription="@string/avatar_pic"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/avatar_icon" />
                    </androidx.cardview.widget.CardView>

                    <Button
                        android:id="@+id/pick_image"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Pick an image"
                        android:textSize="16sp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/full_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/user_intro"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="List your top 5 interests below in the form"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20sp" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First Interest">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/interest1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textAutoCorrect"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Second Interest">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/interest2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textAutoCorrect"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="20sp"
                        android:layout_height="wrap_content" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Third Interest">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/interest3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textAutoCorrect"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="20sp"
                        android:layout_height="wrap_content" />


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fourth Interest">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/interest4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textAutoCorrect"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="20sp"
                        android:layout_height="wrap_content" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Fifth Interest">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/interest5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:imeOptions="actionDone"
                            android:inputType="textAutoCorrect"
                            android:padding="8sp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Space
                        android:layout_width="20sp"
                        android:layout_height="wrap_content" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="20sp" />


                    <Button
                        android:id="@+id/save_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="20dp"
                        android:background="@drawable/btn_custom"
                        android:padding="8sp"
                        android:text="@string/save_profile"
                        android:textColor="@android:color/white" />

                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </FrameLayout>
</layout>