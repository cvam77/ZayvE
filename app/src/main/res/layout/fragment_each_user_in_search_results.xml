<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/each_user_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16sp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/delete_user"
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="end"
                app:srcCompat="@drawable/com_facebook_tooltip_blue_xout" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:layout_margin="5dp"
                android:elevation="10dp">

            <ImageView
                android:id="@+id/profile_picture_imageview_search_result"
                android:layout_width="307dp"
                android:layout_height="252dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@+id/first_interest_textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name_textview"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name_textview_search_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#263238"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="italic"
                android:visibility="gone" />

            <TextView
                android:id="@+id/intro_tv_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginVertical="10dp"
                android:textColor="#455A64" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/first_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/first_interest_iv"
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/ic_baseline_person_add_24"
                    />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/second_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/second_interest_iv"
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/ic_baseline_person_add_24"
                    />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/third_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="26sp" />


                <ImageView
                    android:id="@+id/third_interest_iv"
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/ic_baseline_person_add_24"
                    />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/fourth_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/fourth_interest_iv"
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/ic_baseline_person_add_24"
                    />

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="8dp"
                android:elevation="10dp"
                android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/fifth_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="#000000"
                    android:textSize="26sp" />

                <ImageView
                    android:id="@+id/fifth_interest_iv"
                    android:layout_width="26sp"
                    android:layout_height="26sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:baselineAlignBottom="true"
                    android:src="@drawable/ic_baseline_person_add_24"/>

            </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>