<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#0C0000"
    tools:context=".ui.EachUserInFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="26dp"
                android:layout_gravity="end"
                android:layout_marginRight="50dp"
                app:srcCompat="@drawable/com_facebook_tooltip_black_xout" />

            <TextView
                android:id="@+id/user_name_textview_search_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Shivam Chaudhary"
                android:textColor="#263238"
                android:textSize="45sp"
                android:textStyle="bold"

                />

            <ImageView
                android:id="@+id/profile_picture_imageview_search_result"
                android:layout_width="326dp"
                android:layout_height="259dp"
                android:layout_margin="10dp"
                app:layout_constraintBottom_toTopOf="@+id/first_interest_textview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_name_textview"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

            <TextView
                android:id="@+id/intro_tv_search_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:padding="10dp"
                android:text="Hey, I am Shivam. I am new in UT Tyler. I am looking for some friends to hang out with. If we have any of the matching interest below, just ZayvE me by hitting on any of the interests below and then we can get connected with each other."
                android:textColor="#455A64"
                android:textStyle="italic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/first_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="cursive"
                    android:text="Coding"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:background="#5A5858"
                    app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:id="@+id/second_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="cursive"
                    android:text="Coding"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:background="#5A5858"
                    app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/third_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="cursive"
                    android:text="Coding"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:background="#5A5858"
                    app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/fourth_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="5dp"
                    android:fontFamily="cursive"
                    android:text="Coding"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:background="#5A5858"
                    app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/fifth_interest_textview_search_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:fontFamily="cursive"
                    android:text="Coding"
                    android:textColor="#000000"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="11dp"
                    android:background="#5A5858"
                    app:srcCompat="@drawable/com_facebook_button_like_icon_selected" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</FrameLayout>